<h1> Edit page </h1>

<%= form_for @shop do |f| %>

<div>
<%= f.label :shop_name%>
<%= f.text_field :shop_name %>
</div>

<div>
<%= f.label :address_1 %>
<%= f.text_field :address_1 %>
</div>

<div>
<%= f.label :address_2 %>
<%= f.text_field :address_2 %>
</div>

<div>
<%= f.label :city %>
<%= f.text_field :city%> 
</div>

<div>
<%= f.label :state %>
<%= f.text_field :state %> 
</div>

<div>
<%= f.label :zipcode %>
<%= f.text_field :zipcode %>
</div>

<%= f.submit "Update Shop" %>

<% end %>